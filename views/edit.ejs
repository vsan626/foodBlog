<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui large header">Edit <%= blog.restaurant %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Restaurant Name</label>
			<input type="text" name="blog[restaurant]" value="<%= blog.restaurant %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">		
			<label>Review</label>
			<textarea name="blog[body]"> <%= blog.body %> </textarea>
		</div>
		<div class="field">		
			<input class="ui large button" type="submit">
		</div>

	</form>
</div>


<% include ./partials/footer %> 